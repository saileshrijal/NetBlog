@model List<PostViewModel>

<main>
    <div class="container">
        <div class="row mainmargin">
            <div class="blog col-md-10 mx-auto">
                <div class="all-posts">
                    @if(Model !=null){
                        foreach (var post in Model)
                        {
                            <div class="post-item">
                                <div class="post-img">
                                    @if(post.ThumbnailUrl==null){
                                        <img src="~/thumbnails/default.png" alt="">
                                    }
                                    else{
                                        <img src="~/thumbnails/@post.ThumbnailUrl" alt="">
                                    }
                                </div>
                                <div class="post-main-info">
                                    <p class="post-title">@post.Title</p>
                                    <div class="post-meta">
                                        <span><i class="far fa-user"></i> Posted by @post.User?.FirstName @post.User?.LastName</span><span><i class="far fa-calendar"></i> @post.CreatedDate</span>
                                    </div>
                                    <p>@post.ShortDescription</p>
                                    <p>
                                        @foreach(var postCategory in post.PostCategories!){
                                            <span><i class="fa fa-gear"></i> @postCategory.Category?.Title</span>
                                        }
                                    </p>
                                    <a asp-controller="Blog" asp-action="Post" asp-route-id="@post.Slug" class="main-button">Read More</a>
                                </div>
                            </div>
                        }
                    }
                </div>
                <nav aria-label="blog navigation">
                    <ul class="pagination">
                        <li class="page-item ">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link active" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
